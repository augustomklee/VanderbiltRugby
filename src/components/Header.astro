<header>
  <nav>
    <ul class="nav__list">
      <li class="nav__list-item">
        <a data-target="hero" class="nav__link">Home</a>
      </li>
      <li class="nav__list-item">
        <a data-target="roster" class="nav__link">Roster</a>
      </li>
      <li class="nav__list-item">
        <a data-target="schedule" class="nav__link">Schedule</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  header {
    position: fixed;
    z-index: 1000;
    padding: 1rem 0;
    width: 100%;
    top: 0;
    right: 0;
    left: 0;
    transition: all 0.3s ease;
    backdrop-filter: blur(8px);
    background-color: rgba(0, 0, 0, 0.5);
  }

  .nav__list {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    width: 100%;
    list-style: none;
    margin: 0;
    padding: 0;
    text-transform: uppercase;
    font-size: var(--fs-400);
    letter-spacing: 1px;
    gap: 2rem;
  }

  .nav__list-item:nth-child(1) {
    justify-self: end;
  }
  .nav__list-item:nth-child(2) {
    justify-self: center;
  }
  .nav__list-item:nth-child(3) {
    justify-self: start;
  }

  .nav__link {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
  }

  .nav__link:hover {
    color: var(--clr-gold);
  }

  .nav__link-instagram {
    margin: 0;
  }

  .nav__item-instagram {
    height: 23.75px;
    margin-right: 2rem;
  }

  .fab {
    font-size: var(--fs-600);
    color: var(--clr-white);
    transition: color 0.3s ease;
  }

  .fab:hover {
    color: var(--clr-gold);
  }
</style>

<script>
  // Force scroll to top on page load
  window.history.scrollRestoration = "manual";
  window.scrollTo(0, 0);

  document.addEventListener("DOMContentLoaded", () => {
    const header = document.querySelector("header");
    let lastScroll = 0;

    window.addEventListener("scroll", () => {
      const currentScroll = window.pageYOffset;
      header?.classList.toggle("scrolled", currentScroll > 50);
      lastScroll = currentScroll;
    });

    // Simple scroll behavior for navigation links
    document.querySelectorAll(".nav__link").forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const targetId = link.getAttribute("data-target");
        if (!targetId) return;

        const targetSection = document.getElementById(targetId);
        if (!targetSection) return;

        const headerHeight = header?.offsetHeight || 0;
        const offset = targetSection.offsetTop - headerHeight - 20; // 20px buffer

        window.scrollTo({
          top: offset,
          behavior: "smooth",
        });
      });
    });
  });
</script>
