<style>
  header {
    position: absolute;
    z-index: 4;
    padding: 0;
    width: 100%;
    top: 0;
    right: 0;
    left: 0;
    margin-top: 2rem;
  }

  .nav__list {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    width: 100%;
    list-style: none;
    margin: 0;
    padding: 0;
    text-transform: uppercase;
    font-size: var(--fs-400);
    letter-spacing: 1px;
    gap: 2rem;
  }

  .nav__list-item:nth-child(1) {
    justify-self: end;
  }
  .nav__list-item:nth-child(2) {
    justify-self: center;
  }
  .nav__list-item:nth-child(3) {
    justify-self: start;
  }

  .nav__link {
    text-decoration: none;
    color: inherit;
  }

  .nav__link:hover {
    color: var(--clr-gold);
  }

  .nav__link-instagram {
    margin: 0;
  }

  .nav__item-instagram {
    height: 23.75px;
    margin-right: 2rem;
  }

  .fab {
    font-size: var(--fs-600);
    color: var(--clr-white);
  }

  .fab:hover {
    color: var(--clr-gold);
  }
</style>
