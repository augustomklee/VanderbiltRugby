---
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import News from "../components/news/News.astro";
import "../styles/global.css";
import RosterComponent from "../components/Roster.astro";
import ScheduleComponent from "../components/Schedule.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/images/vurfc-logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>VURFC</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Open+Sans:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main>
      <section id="hero">
        <Hero />
      </section>
      <section id="roster">
        <RosterComponent />
      </section>
      <section id="schedule">
        <ScheduleComponent />
      </section>
      <section id="news">
        <News />
      </section>
    </main>
    <footer></footer>
  </body>
</html>
